{
	"name": "opsos",
	"image": "mcr.microsoft.com/vscode/devcontainers/go:1.19-bullseye",
	"features": {
		"ghcr.io/devcontainers/features/common-utils:1": {
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/docker-in-docker:1": {
            "version": "20.10"
        },
        "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
            "version": "1.25",
            "helm": "3.9.4",
            "minikube": "none"
        },
        "ghcr.io/devcontainers/features/terraform:1": {
			"version": "1.2"
		},
		"ghcr.io/neermitt/devcontainers-features/helmfile:1": {
            "version": "0.146.0"
        },
		"ghcr.io/neermitt/devcontainers-features/kind:1": {
            "version": "0.16.0"
        },
		"ghcr.io/neermitt/devcontainers-features/utils:1": {
            "yq_version": "4.28.1"
        }
	},
	"extensions": [
		"EditorConfig.EditorConfig",
		"ms-vscode.makefile-tools"
	],
	"postCreateCommand": "helm plugin install https://github.com/databus23/helm-diff ",
	"remoteUser": "vscode"
}
